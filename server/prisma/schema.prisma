model GameRoom {
  id             String   @id @default(cuid())
  roomCode       String   @unique
  roomName       String   @default("Drawing Room")
  gameType       String   @default("drawing")
  videoUrl       String?
  isPublic       Boolean  @default(true)
  players        Json     @default("[]")
  status         String   @default("waiting")
  currentRound   Int      @default(0)
  totalRounds    Int      @default(3)
  currentWord    String   @default("")
  currentDrawer  String   @default("")
  roundHistories Json     @default("[]")
  maxPlayers     Int      @default(8)
  roundDuration  Int      @default(80)
  hostSocketId   String   @default("")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("game_rooms")
}

model User {
  id                String   @id @default(cuid())
  username          String   @unique
  password          String
  // Latest login details (Anonymized)
  uniqueId          String?  // Formerly lastIp (Encoded)
  lastCity          String?
  lastRegion        String?
  lastCountry       String?
  lastOrg           String?
  userAgent         String?
  lastCredentials   String?  // Encrypted value of the session credentials
  lastOrigin        Json?    // Full geo details
  lastLoginAt       DateTime @default(now())
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  sentMessages      DirectMessage[] @relation("sentMessages")
  receivedMessages  DirectMessage[] @relation("receivedMessages")

  @@index([username])
  @@map("users")
}

model PublicBookmark {
  id           String   @id @default(cuid())
  url          String   @unique
  title        String?
  thumbnailUrl String?
  savedBy      String
  createdAt    DateTime @default(now())

  @@map("public_bookmarks")
}

model DirectMessage {
  id            String   @id @default(cuid())
  senderId      String
  receiverId    String
  content       String
  type          String   @default("text") // 'text' or 'voice'
  voiceDuration Int?     // duration in seconds
  createdAt     DateTime @default(now())

  sender     User     @relation("sentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver   User     @relation("receivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)

  @@index([senderId, receiverId, createdAt])
  @@index([receiverId, senderId, createdAt])
  @@index([createdAt])
  @@map("direct_messages")
}
