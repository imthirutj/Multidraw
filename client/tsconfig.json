{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "outDir": "dist",
        "rootDir": "src",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "noEmit": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}